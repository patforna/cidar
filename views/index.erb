<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/boilerplate.css">    
    <link rel="stylesheet" href="/css/style.css">
    <title>Cidar - Build Radiator</title>
  </head>
  <body>
    <div id="top-git">
      <div class="total"></div>
      <div class="commiters"></div>
    </div>
    <div id="container">
      <div class="status-box">
        <ol>
          <li id="core" class="upstream">
            <span class="<%= status_of('^(core :: build)|(core-marklogic :: integration_functional_tests)$') %>">Core</span>
            <span class="people">
              <% @status.commiters.each do |name| %>
                <img src="/images/<%=name%>.jpg"/>
              <% end %>
            </span>
            <span class="build"><%= @status.buildLabel %></span>
            <span class="time"><%= @status.fastest_time('core') %></span>                
            <span class="commit-message"><%= @status.commit_message %></span>
          </li>
          <li id="aim" class="upstream">
            <span class="<%= status_of('aim :: build') %>">Aim</span>      
            <span class="people">
              <% @status.commiters.each do |name| %>
                <img src="/images/<%=name%>.jpg"/>
              <% end %>
            </span>
            <span class="build"><%= @status.buildLabel %></span>
            <span class="time"><%= @status.fastest_time('aim') %></span>                
            <span class="commit-message"><%= @status.commit_message %></span>
          </li>  
          <li id="identity" class="upstream">
            <span class="<%= status_of('identity :: build') %>">Identity</span>      
            <span class="people">
              <% @status.commiters.each do |name| %>
                <img src="/images/<%=name%>.jpg"/>
              <% end %>
            </span>
            <span class="build"><%= @status.buildLabel %></span>
            <span class="time"><%= @status.fastest_time('identity') %></span>                
            <span class="commit-message"><%= @status.commit_message %></span>
          </li>  
          <li id="track" class="upstream">
            <span class="<%= status_of('^(track :: build)|(track-marklogic :: integration_functional_tests)$') %>">Track</span>      
            <span class="people">
              <% @status.commiters.each do |name| %>
                <img src="/images/<%=name%>.jpg"/>
              <% end %>
            </span>
            <span class="build"><%= @status.buildLabel %></span>
            <span class="time"><%= @status.fastest_time('track') %></span>                
            <span class="commit-message"><%= @status.commit_message %></span>
          </li>  
        </ol>
      </div>    
      <div class="status-box">
        <ol>
          <li>
            <span class="env <%= status_of('^dev-system-tests :: [\w-]*$') %>">DEV</span>
            <span class="build"><%= @status.buildLabel %></span>
          </li>
          <li>
            <span class="env <%= status_of('^qa :: [\w-]*$') %>">QA</span>
            <span class="build"><%= @status.buildLabel %></span>
          </li>
          <li>
            <span class="env <%= status_of('^live-a :: [\w-]*$') %>">LIVE-A</span>
            <span class="build"><%= @status.buildLabel %></span>
          </li>          
          <li>
            <span class="env <%= status_of('^live-b :: [\w-]*$') %>">LIVE-B</span>
            <span class="build"><%= @status.buildLabel %></span>
          </li>                    
        </ol>
      </div>
      <div class="status-box small">
        <span class="small <%= status_of("sig :: send-source-to-sig") %>">SIG</span>                        
        <div class="stars">
          <div class="cover"></div>
          <div class="progress" style="width: 84%;"></div>
        </div>
      </div>    
    </div>
    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/libs/jquery-1.6.2.min.js"><\/script>')</script>    
    <script defer src="js/global.js"></script>
  </body>
</html>
